<!DOCTYPE html>
<html>
    <head>
        <title>Users</title>
        <link rel="stylesheet" type="text/css" href="/stylesheets/TRROStylesheet.css">
    </head>
    <body style = "background-color: #c9ddff">
        <h1>Users</h1>
        <ul>
            <li><a class="nav" href="/">Home</a></li>
            <li><a class="nav" href="/topic/all">Forums</a></li>
            <li><a class="nav" href="/about">About</a></li>
            <li><a class="nav" style ="background-color:#ffffff" href="#">Users</a></li>
        </ul>
        <br />
        <table border="1">
            <tr><th>#</th><th>username</th><th>Actions</th></tr>
            <% for(var i=0; result.length > i; i++ ) { %>
            <tr>
                <td><%= result[i].user_id %></td>
                <td><a href="/user/?user_id=<%= result[i].user_id %>"><%= result[i].username %></a></td>
                <td>

                <form action="/user/delete/">
                    <button onclick="event.preventDefault();window.location.href='/user/edit/?user_id=<%= result[i].user_id %>'">Edit</button>
                        <input type="hidden" name="user_id" id="user_id" value="<%= result[i].user_id %>" />
                        <input type="submit" value="Delete"/>
                    </form>
            </tr>
            <% } %>
        </table>
        <br />
        <a href="/user/add">Add New User</a>
    </body>

</html>
