<!DOCTYPE html>
<html>
<head>
    <% var a; if(result.length > 0){ a = "Subjects In " + result[0].topicTitle } else { a = "Empty Topic" }  %>
    <title>
        <%= a %>
    </title>
    <% ; %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/TRROStylesheet.css">
</head>
<body style = "background-color: #c9ddff">
<h1><%= a; %></h1>
<ul>
    <li><a class="nav" href="../">Home</a></li>
    <li><a class="nav" href="../topic/all">Topics</a></li>
    <li><a class="nav" href="/about">About</a></li>
    <li><a class="nav" href="/user/all">Users</a></li>
</ul>
<br/>
<ul>
    <table border="1">
        <tr><th>Subject Name:</th><th>Description:</th><th>Information</th><th>Actions</th></tr>
        <% for(var i=0; result.length > i; i++ ) { %>
        <tr>
            <td><a href="/posts/?subject_id=<%= result[i].subject_id %> &topic_id=<%= topic_id %>"><%= result[i].title %></a></td>
            <td><%= result[i].description %></td>
            <td>
                Creator:
                <br/>
                <a href="/user/?user_id=<%= result[i].creator_ID %>">
                    <%= result[i].creator_name %>
                </a>
                <br />
                Creation Date:
                <br/>
                <%= result[i].date_of_creation %>
                <br>
            </td>
            <td>
                <button onclick="event.preventDefault();window.location.href='/subject/edit/?topic_id=<%= result[i].topic_id %>&subject_id=<%= result[i].subject_id %>'">Edit</button>
                <form action="/subject/delete/">
                    <input type="hidden" name="topic_id" id="topic_id" value="<%= result[i].topic_id %>" />
                    <input type="hidden" name="subject_id" id="subject_id" value="<%= result[i].subject_id %>" />
                    <input type="submit" value="Delete"/>
                </form>
            </td>
        </tr>
        <% } %>
    </table>
</ul>
<a href="/subject/add?topic_id=<%= topic_id %>">Add New Subject</a> <br />
</body>

</html>